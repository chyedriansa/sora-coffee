generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int @id @default(autoincrement())
  tittle String
  item Item []
}

model Item {
  id Int @id @default(autoincrement())
  name String
  price Float
  categoryId Int 
  category Category @relation(fields: [categoryId], references: [id])
  currentstock CurrentStock?
  
}

model CurrentStock {
  id Int @id
  stock Int
  currentId Int @unique
  item Item @relation(fields: [currentId], references: [id])
}

model Supplier{
  id Int @id @default(autoincrement())
  name String

} 

model Status{
  id Int @id @default(autoincrement())
  name String
  statusStock Boolean
}
